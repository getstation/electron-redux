{
  "name": "@getstation/electron-redux",
  "version": "2.0.0-rc.1",
  "description": "Use redux in the main and browser process in electron",
  "main": "dist/index.js",
  "scripts": {
    "jest": "rm -rf coverage && jest -c jest.config.json --coverage",
    "mocha-node-ipc": "xvfb-maybe electron-mocha --require-main electron-mocha/node-ipc/main-loader --renderer electron-mocha/node-ipc/renderer-loader",
    "mocha-electron-ipc": "xvfb-maybe electron-mocha --require-main electron-mocha/electron-ipc/main-loader --renderer electron-mocha/electron-ipc/renderer-loader",
    "test": "yarn run jest && yarn run mocha-electron-ipc && yarn run mocha-node-ipc",
    "lint": "eslint 'src/**/*'",
    "build": "rm -rf dist && babel src --out-dir dist",
    "prepublish": "yarn run build"
  },
  "keywords": [
    "electron",
    "redux",
    "react",
    "desktop"
  ],
  "author": "Burkhard Reffeling <burkhard.reffeling@gmail.com> (http://www.burgiblog.com)",
  "contributors": [
    "JoÃ«l Charles <joel@getstation.com>"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/getstation/electron-redux.git"
  },
  "homepage": "https://github.com/getstation/electron-redux",
  "bugs": "https://github.com/getstation/electron-redux/issues",
  "license": "MIT",
  "dependencies": {
    "@babel/runtime": "^7.3.1",
    "debug": "^4.1.0",
    "immutable": "^3.8.1",
    "redux": "^4.0.1",
    "stream-json-rpc": "^0.5.6",
    "transit-immutable-js": "^0.7.0",
    "transit-js": "^0.8.861",
    "xvfb-maybe": "^0.2.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.0.0",
    "@babel/core": "^7.0.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.0.0",
    "@babel/plugin-transform-runtime": "^7.2.0",
    "@babel/preset-env": "^7.0.0",
    "@babel/register": "^7.0.0",
    "babel-core": "^7.0.0-bridge.0",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^24.1.0",
    "electron": "^4.0.4",
    "electron-mocha": "^6.0.4",
    "eslint": "^5.8.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.14.0",
    "jest": "^24.1.0",
    "node-ipc": "^9.1.1",
    "pre-commit": "^1.2.2",
    "stream-electron-ipc": "^1.0.8",
    "stream-node-ipc": "^1.0.5"
  },
  "pre-commit": [
    "test",
    "lint",
    "build"
  ]
}
